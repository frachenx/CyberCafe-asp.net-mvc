@model List<CyberCafe.Models.TableViewModels.ComputerTableViewModel>
@{
    ViewBag.Title = "Manage Computers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>MANAGE COMPUTERS</h1>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Computer Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach(CyberCafe.Models.TableViewModels.ComputerTableViewModel oComputer in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@oComputer.Name</td>
                    <td>
                        <a href="@Url.Action($"Edit/{oComputer.Id}","Computer")"><i class="fa-solid fa-marker"></i></a>
                    </td>
                </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

