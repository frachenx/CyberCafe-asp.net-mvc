@model CyberCafe.Models.ViewModels.ComputerViewModel
@{
    ViewBag.Title = "Add Computer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ADD COMPUTER</h1>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        @using (Html.BeginForm("Add", "Computer", FormMethod.Post))
        {

            @Html.AntiForgeryToken()
            @Html.ValidationMessage("error", new { @class = "text-danger" })

            @Html.LabelFor(d => d.Name)
            @Html.TextBoxFor(d => d.Name, new { @class = "form-control" })
            @Html.ValidationMessage("Name");

            @Html.LabelFor(d => d.Location)
            @Html.TextBoxFor(d => d.Location, new { @class = "form-control" })
            @Html.ValidationMessage("Location");

            @Html.LabelFor(d => d.IP)
            @Html.TextBoxFor(d => d.IP, new { @class = "form-control" })
            @Html.ValidationMessage("IP");

            <input type="submit" class="btn btn-primary col-12" />
        }
    </div>
</div>

