@model CyberCafe.Models.ViewModels.AdminViewModel
@{
    ViewBag.Title = "Admin Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ADMIN PROFILE</h2>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
        {
            @Html.ValidationMessage("error", new { @class = "text-danger" })

            @Html.HiddenFor(d => d.Id)

            @Html.LabelFor(d => d.Name)
            @Html.TextBoxFor(d => d.Name, new { @class = "form-control" })
            @Html.ValidationMessage("Name")

            @Html.LabelFor(d => d.Username)
            @Html.TextBoxFor(d => d.Username, new { @class = "form-control" })
            @Html.ValidationMessage("Username")

            @Html.LabelFor(d => d.Contact)
            @Html.TextBoxFor(d => d.Contact, new { @class = "form-control" })
            @Html.ValidationMessage("Contact")

            @Html.LabelFor(d => d.Email)
            @Html.TextBoxFor(d => d.Email, new { @class = "form-control" })
            @Html.ValidationMessage("Email")

            <input type="submit" class="btn btn-primary col-12" />
        }
    </div>
</div>

